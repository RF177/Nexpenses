<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <!-- Toolbar -->

    <!-- Barra superior -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:id="@+id/relativeLayout1">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@color/primary" />

        <!-- Icone -->
        <com.getbase.floatingactionbutton.FloatingActionButton
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fab_categoria"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            fab:fab_size="mini"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:fab_colorNormal="@color/fab"/>
        <!-- Icone -->

        <!-- Descricao icone -->
        <TextView
            android:id="@+id/icon_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="descricao"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/fab_categoria"
            android:layout_centerHorizontal="true" />
        <!-- Descricao icone -->

    </RelativeLayout>
    <!-- Barra superior -->

    <!-- Card Valor -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/relativeLayout2">

        <!-- Card Interior -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/id_card"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardCornerRadius="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="5dp">

            <!-- Valor -->
            <EditText
                android:id="@+id/editText_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView_valor"
                android:digits="1234567890.,"
                android:ems="10"
                android:inputType="numberDecimal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Valor"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold"/>
            <!-- Valor -->

        </android.support.v7.widget.CardView>
        <!-- Card Interior -->

    </RelativeLayout>
    <!-- Card Valor -->

    <!-- Scroll informações -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayout2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <!-- Card Data -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/start_card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                card_view:cardCornerRadius="2dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="5dp">

                <!-- Title Data -->
                <TextView
                    android:id="@+id/textView_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText_valor"
                    android:text="Data"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <!-- Title Data -->

                <!-- Data -->
                <EditText
                    android:id="@+id/editText_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/editText_valor"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView_data"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <!-- Data -->

                <!-- Title Descricao -->
                <TextView
                    android:id="@+id/textView_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText_data"
                    android:text="Descrição"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <!-- Title Descricao -->

                <!-- Descricao -->
                <EditText
                    android:id="@+id/editText_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/editText_data"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView_descricao"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:lines="3"
                    android:maxLines="3"/>
                <!-- Descricao -->

            </android.support.v7.widget.CardView>
            <!-- Card Data -->

        </RelativeLayout>
    </ScrollView>
    <!-- Scroll informações -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/fab"
            layout="@layout/fab_single" />

    </FrameLayout>

</RelativeLayout>
